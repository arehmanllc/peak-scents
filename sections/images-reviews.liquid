          {% else %}
           {{ 'image' | placeholder_svg_tag }}  
          {% endif %}
        </div>
        <div class="reviews-text-area">
           <div class="reviews-stars">
            {% if section.settings.review_stars_1 != blank %}
              {% for i in (1..5) %}
                <img class="review-stars" src="{{ section.settings.review_stars_1 | img_url: 'large' }}" alt="Review Stars 1">
