{{ 'images-reviews.css' |  asset_url | stylesheet_tag }}
<section>
  <div class="reviews-main-wrapper section-padding wrapper">
    <div class="reviews-images-container">
      <div class="reviews-images-block">
        <div class="reviews-image">
          {% if section.settings.review_image_1 != blank %}
            <img src="{{ section.settings.review_image_1 | img_url: 'large' }}" alt="Review Image 1">
          {% else %}
           {{ 'image' | placeholder_svg_tag }}  
          {% endif %}
        </div>
        <div class="reviews-image">
          {% if section.settings.review_image_2 != blank %}
            <img src="{{ section.settings.review_image_2 | img_url: 'large' }}" alt="Review Image 2">
          {% else %}
           {{ 'image' | placeholder_svg_tag }}  
